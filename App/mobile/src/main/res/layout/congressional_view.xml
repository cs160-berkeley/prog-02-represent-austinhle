<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context="com.austinhle.represent.CongressionalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:cardBackgroundColor="@color/black"
            card_view:cardElevation="2dp">

            <TextView
                android:id="@+id/zipcode_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAlignment="center"
                android:text="Showing Results for 95914"
                android:textColor="@color/white"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/c1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:cardBackgroundColor="@color/democrat"
            card_view:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/cImage1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:layout_margin="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/boxer"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:id="@+id/cContent1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/name1"
                            android:textSize="20dp"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/cParty1"
                            android:src="@drawable/dem"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/cPosition1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/sen"
                            android:textSize="16dp"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/cInfo1"
                            android:src="@drawable/ic_info_outline_white_24dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:onClick="viewCongressMember"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">

                        <ImageView
                            android:id="@+id/twitterIcon1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="3dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/twitter"/>

                        <TextView
                            android:id="@+id/cTweet1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_toEndOf="@id/twitterIcon1"
                            android:text="@string/tweet1"
                            android:textSize="12dp"
                            android:textColor="@color/white"/>

                    </RelativeLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/cWebsite1"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:padding="2dp"
                                android:layout_marginBottom="1dp"
                                android:text="@string/website1"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:background="@color/dem_button"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/cEmail1"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:padding="2dp"
                                android:layout_marginTop="1dp"
                                android:text="@string/email1"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:background="@color/dem_button"
                                android:textStyle="bold" />
                        </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/c2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:cardBackgroundColor="@color/democrat"
            card_view:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/cImage2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight=".4"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/feinstein"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:id="@+id/cContent2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/name2"
                            android:textSize="20dp"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/cParty2"
                            android:src="@drawable/dem"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/cPosition2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/sen"
                            android:textSize="16dp"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/cInfo2"
                            android:src="@drawable/ic_info_outline_white_24dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:onClick="viewCongressMember"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">

                        <ImageView
                            android:id="@+id/twitterIcon2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="3dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/twitter"/>

                        <TextView
                            android:id="@+id/cTweet2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_toEndOf="@id/twitterIcon2"
                            android:text="@string/tweet2"
                            android:textSize="12dp"
                            android:textColor="@color/white"/>
                    </RelativeLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/cWebsite2"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:padding="2dp"
                                android:layout_marginBottom="1dp"
                                android:text="@string/website2"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:background="@color/dem_button"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/cEmail2"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:padding="2dp"
                                android:layout_marginTop="1dp"
                                android:text="@string/email2"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:background="@color/dem_button"
                                android:textStyle="bold" />
                        </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/c3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            card_view:cardCornerRadius="2dp"
            card_view:cardBackgroundColor="@color/republican"
            card_view:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/cImage3"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:layout_weight=".4"
                    android:adjustViewBounds="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/lamalfa"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:id="@+id/cContent3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/name3"
                            android:textSize="20dp"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/cParty3"
                            android:src="@drawable/rep"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/cPosition3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/rep"
                            android:textSize="16dp"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/cInfo3"
                            android:src="@drawable/ic_info_outline_white_24dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:onClick="viewCongressMember"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">

                        <ImageView
                            android:id="@+id/twitterIcon3"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="3dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/twitter"/>

                        <TextView
                            android:id="@+id/cTweet3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_toEndOf="@id/twitterIcon3"
                            android:text="@string/tweet3"
                            android:textSize="12dp"
                            android:textColor="@color/white"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/cWebsite3"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:padding="2dp"
                            android:layout_marginBottom="1dp"
                            android:text="@string/website3"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:background="@color/rep_button"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/cEmail3"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:padding="2dp"
                            android:layout_marginTop="1dp"
                            android:text="@string/email3"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:background="@color/rep_button"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>